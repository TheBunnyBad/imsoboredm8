extends ./layout
block contenido
  div(class="text-center col-md-4 remove-float regular-top-space mx-auto")
    form(action="/users", method="POST")
      div(class="form-group")
        label(for="Email") Email
        input(type="text", name="email", placeholder="email", id"email", class="form-control")
      div
        label(for="password") Password
        input(type="password", name="password", placeholder="password",id="password", class="form-control")
      div
        label(for="password_confirmation") Confirma tu contraseña
        input(type="password", name="password_confirmation", placeholder="password",id="password_confirmation", class="form-control")
      div(class="form-group")
        label(for="username") Nombre de usuario
        input(type="text", name="username", placeholder="Nombre de usario", id"username", class="form-control")
        
      div(class="row top-space")
        div(class="col-xs-12 col-sm-6")
          input(type="submit", value="Iniciar sesión", class="btn btn-info")
        div(class="col-xs-12 col-sm-6 text-right")
          a(href="/login") Ya tengo cuenta
